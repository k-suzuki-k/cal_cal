= form_with model: user, url: new_user_session_path, id: 'new_user', class: 'validate_field', local: true do |f|

  .field
    = f.label :email
    br
    = f.email_field :email, autocomplete: "email", class: "validate[required,custom[email]]"

  .field
    = f.label :password
    br
    = f.password_field :password, autocomplete: "current-password", class: "validate[required,minSize[6]]"

  /- if devise_mapping.rememberable?

    .field
      = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.submit "ログイン"
