= form_with model: user, url: user_registration_path, id: 'new_user', class: 'validate_field', local: true do |f|

  .field.form-group
    = f.label :email
    br
    = f.email_field :email, autocomplete: "email", class: "form-control validate[required,custom[email]] email_auto"

  .field.form-group
    = f.label :password
    br
    = f.password_field :password, autocomplete: "new-password", class: "form-control validate[required,minSize[6]]"

  .actions.mt-5
    = f.submit "登録する", class: "btn btn-primary btn-block rounded-pill"
